@inherits LayoutComponentBase

<PageTitle>carbon</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudImage Class="ml-3" Src="images/brand/carbonDark.svg" Width="120"></MudImage>
        <MudSpacer />
        <MudMenu AnchorOrigin="Origin.CenterRight" TransformOrigin="Origin.TopRight">
            <ActivatorContent>
                <MudAvatar Style="height:38px; width:38px; font-size:1.2rem; cursor: pointer;" Color="Color.Secondary">JL</MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <AvatarPopoverMenu/>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}